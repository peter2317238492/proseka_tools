<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ProsekaToolsApp.Pages.Tab3Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProsekaToolsApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- 左半边：解密 -->
        <ScrollViewer Grid.Column="0">
            <StackPanel Spacing="12" Padding="24">
                <TextBlock FontSize="24" FontWeight="SemiBold" Text="解密 (API apidecrypt)"/>

                <TextBlock Text="地区 (region)"/>
                <ComboBox x:Name="RegionCombo" SelectedIndex="0" Width="180">
                    <ComboBoxItem Content="jp"/>
                    <ComboBoxItem Content="tw"/>
                    <ComboBoxItem Content="en"/>
                    <ComboBoxItem Content="kr"/>
                    <ComboBoxItem Content="cn"/>
                </ComboBox>

                <CheckBox x:Name="UseLatestCheckBox" IsChecked="True" Content="使用最新的 sekai 数据包 (%APPDATA%/ProsekaTools/captures/mysekai)"/>

                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Button x:Name="ChooseFileButton" Content="选择文件" Click="ChooseFileButton_Click"/>
                    <TextBox x:Name="SelectedFileTextBox" IsReadOnly="True" MinWidth="380" PlaceholderText="未选择文件"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button x:Name="StartDecryptButton" Content="开始解密" Click="StartDecryptButton_Click"/>
                    <ProgressRing x:Name="WorkingRing" IsActive="False" Width="20" Height="20"/>
                </StackPanel>

                <TextBlock x:Name="StatusText" TextWrapping="Wrap"/>

                <!-- 收获唱片信息 -->
                <StackPanel Spacing="6" Margin="0,16,0,0">
                    <TextBlock FontSize="18" FontWeight="SemiBold" Text="收获唱片"/>
                    <ListView x:Name="MusicRecordsList" SelectionMode="None" MaxHeight="260">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:MusicRecordEntry">
                                <Grid Margin="0,6,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Width="56" Height="56" Margin="0,0,10,0" CornerRadius="4" Background="#20808080">
                                        <Image Source="{x:Bind JacketImage, Mode=OneWay}" Stretch="UniformToFill"/>
                                    </Border>
                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock TextWrapping="Wrap" Text="{x:Bind Info, Mode=OneWay}"/>
                                        <HyperlinkButton Content="{x:Bind MetaUrl, Mode=OneWay}" NavigateUri="{x:Bind MetaUri, Mode=OneWay}"/>
                                        <TextBlock Text="{x:Bind LoadStatus, Mode=OneWay}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- 右半边：地图渲染 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 控件栏 -->
            <StackPanel Orientation="Horizontal" Spacing="12" Padding="12">
                <ComboBox x:Name="MapSelectCombo" Width="220" SelectionChanged="MapSelectCombo_SelectionChanged"/>
                <CheckBox x:Name="ShowIconsCheckBox" IsChecked="True" Content="显示图标" Checked="ShowIconsCheckBox_Toggled" Unchecked="ShowIconsCheckBox_Toggled"/>
                <Button Content="载入最新JSON" Click="LoadLatestJsonButton_Click"/>
                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <Button Content="+" Width="32" Height="32" Click="ZoomInButton_Click"/>
                    <Button Content="-" Width="32" Height="32" Click="ZoomOutButton_Click"/>
                    <Button Content="重置" Width="60" Height="32" Click="ResetZoomButton_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- 画布区域 -->
            <Border Grid.Row="1" Margin="12" BorderBrush="LightGray" BorderThickness="1">
                <ScrollViewer x:Name="MapScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              ZoomMode="Enabled"
                              MinZoomFactor="0.25"
                              MaxZoomFactor="4">
                    <Grid x:Name="MapZoomContainer"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top">
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Image x:Name="MapImage" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <Canvas x:Name="MapCanvas" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</Page>
