<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ProsekaToolsApp.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProsekaToolsApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Background="Transparent">
        <StackPanel Padding="24" Spacing="16">
            <TextBlock FontSize="30" FontWeight="SemiBold" Text="设置" />

            <!-- Appearance & behavior section -->
            <StackPanel Spacing="12">
                <TextBlock Text="外观与行为" Style="{StaticResource SubtitleTextBlockStyle}" />

                <!-- Card 1: App theme -->
                <Border CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="应用主题" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="选择应用的显示主题" Opacity="0.7" />
                        </StackPanel>
                        <ComboBox x:Name="ThemeCombo" Grid.Column="1" HorizontalAlignment="Right" Width="200" SelectionChanged="ThemeCombo_SelectionChanged">
                            <ComboBoxItem x:Name="FollowSystemItem" Content="跟随系统"/>
                            <ComboBoxItem x:Name="LightItem" Content="浅色"/>
                            <ComboBoxItem x:Name="DarkItem" Content="深色"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Card 2: Navigation style -->
                <Border CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="导航位置" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="选择侧边栏显示位置" Opacity="0.7" />
                        </StackPanel>
                        <ComboBox Grid.Column="1" HorizontalAlignment="Right" Width="200">
                            <ComboBoxItem Content="左侧" IsSelected="True"/>
                            <ComboBoxItem Content="顶部"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Card 3: Sound -->
                <Border CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="声音" Style="{StaticResource BodyStrongTextBlockStyle}" />
                            <TextBlock Text="启用或关闭音效" Opacity="0.7" />
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- About section -->
            <StackPanel Spacing="12">
                <TextBlock Text="关于" Style="{StaticResource SubtitleTextBlockStyle}" />
                <Border CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <SymbolIcon Symbol="Contact" Width="32" Height="32"/>
                            <StackPanel>
                                <TextBlock Text="Proseka Tools" Style="{StaticResource BodyStrongTextBlockStyle}" />
                                <TextBlock Text="© 2025" Opacity="0.7" />
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="v1.0.0" />
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
