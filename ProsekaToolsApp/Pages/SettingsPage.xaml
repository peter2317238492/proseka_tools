<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ProsekaToolsApp.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProsekaToolsApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer Background="Transparent">
        <StackPanel Padding="24" Spacing="16">
            <TextBlock
                FontSize="30"
                FontWeight="SemiBold"
                Text="设置" />

            <!--  Appearance & behavior section  -->
            <StackPanel Spacing="12">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="外观与行为" />

                <!--  Card 1: App theme  -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="应用主题" />
                            <TextBlock Opacity="0.7" Text="选择应用的显示主题" />
                        </StackPanel>
                        <ComboBox
                            x:Name="ThemeCombo"
                            Grid.Column="1"
                            Width="200"
                            HorizontalAlignment="Right"
                            SelectionChanged="ThemeCombo_SelectionChanged">
                            <ComboBoxItem x:Name="FollowSystemItem" Content="跟随系统" />
                            <ComboBoxItem x:Name="LightItem" Content="浅色" />
                            <ComboBoxItem x:Name="DarkItem" Content="深色" />
                        </ComboBox>
                    </Grid>
                </Border>

                <!--  Card 2: Navigation style  -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="导航位置" />
                            <TextBlock Opacity="0.7" Text="选择侧边栏显示位置" />
                        </StackPanel>
                        <ComboBox
                            Grid.Column="1"
                            Width="200"
                            HorizontalAlignment="Right">
                            <ComboBoxItem Content="左侧" IsSelected="True" />
                            <ComboBoxItem Content="顶部" />
                        </ComboBox>
                    </Grid>
                </Border>

                <!--  Card 3: Sound  -->
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="220" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="声音" />
                            <TextBlock Opacity="0.7" Text="启用或关闭音效" />
                        </StackPanel>
                        <ToggleSwitch Grid.Column="1" HorizontalAlignment="Right" />
                    </Grid>
                </Border>
            </StackPanel>

            <!--  About section  -->
            <StackPanel Spacing="12">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="关于" />
                <Border
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid Padding="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Spacing="12">
                            <SymbolIcon
                                Width="32"
                                Height="32"
                                Symbol="Contact" />
                            <StackPanel>
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Proseka Tools" />
                                <TextBlock Opacity="0.7" Text="© 2025" />
                            </StackPanel>
                        </StackPanel>
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Text="v1.0.0" />
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
