<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ProsekaToolsApp.Pages.OwnedCardsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProsekaToolsApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- 左半边：解密 -->
        <ScrollViewer Grid.Column="0">
            <StackPanel Spacing="12" Padding="24">
                <TextBlock FontSize="24" FontWeight="SemiBold" Text="已拥有的卡片"/>

                <TextBlock Text="地区 (region)"/>
                <ComboBox x:Name="RegionCombo" SelectedIndex="0" Width="180">
                    <ComboBoxItem Content="jp"/>
                    <ComboBoxItem Content="tw"/>
                    <ComboBoxItem Content="en"/>
                    <ComboBoxItem Content="kr"/>
                    <ComboBoxItem Content="cn"/>
                </ComboBox>

                <CheckBox x:Name="UseLatestCheckBox" IsChecked="True" Content="使用最新的 suite 数据包 (%APPDATA%/ProsekaTools/captures/suite)"/>

                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Button x:Name="ChooseFileButton" Content="选择文件" Click="ChooseFileButton_Click"/>
                    <TextBox x:Name="SelectedFileTextBox" IsReadOnly="True" MinWidth="380" PlaceholderText="未选择文件"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button x:Name="StartDecryptButton" Content="开始解密" Click="StartDecryptButton_Click"/>
                    <ProgressRing x:Name="WorkingRing" IsActive="False" Width="20" Height="20"/>
                    <Button Content="载入最新JSON" Click="LoadLatestJsonButton_Click"/>
                </StackPanel>

                <TextBlock x:Name="StatusText" TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 右半边：卡面 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Spacing="12" Padding="12">
                <Button Content="刷新卡面" Click="ReloadCardsButton_Click"/>
                <ProgressRing x:Name="CardWorkingRing" IsActive="False" Width="20" Height="20"/>
            </StackPanel>

            <GridView x:Name="CardsGrid" Grid.Row="1">
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="3"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:OwnedCardEntry">
                        <StackPanel Spacing="6" Width="180">
                            <TextBlock Text="{x:Bind CardId, Mode=OneWay}" FontWeight="SemiBold"/>
                            
                            <!-- 卡片主体 with frame -->
                            <Grid Width="156" Height="156">
                                <!-- 边框 -->
                                <Image Source="{x:Bind FrameImage, Mode=OneWay}" Stretch="Fill"/>
                                
                                <!-- 立绘 -->
                                <Border Margin="8">
                                    <Image Source="{x:Bind CardImage, Mode=OneWay}" Stretch="Uniform"/>
                                </Border>
                                
                                <!-- 左上角属性图标 -->
                                <Image Source="{x:Bind AttributeImage, Mode=OneWay}" 
                                       Width="32" Height="32"
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Top"
                                       Margin="4"/>
                                
                                <!-- 左下角星级 -->
                                <StackPanel Orientation="Vertical" 
                                           HorizontalAlignment="Left" 
                                           VerticalAlignment="Bottom"
                                           Margin="4">
                                    <ItemsControl ItemsSource="{x:Bind RarityStars, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" Spacing="1"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding}" Width="16" Height="16"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                            
                            <TextBlock Text="{x:Bind LoadStatus, Mode=OneWay}" FontSize="10" Foreground="Gray"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
    </Grid>
</Page>
