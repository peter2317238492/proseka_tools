<Application
    x:Class="ProsekaToolsApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProsekaToolsApp">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!--  Make shell layers transparent to reveal Mica  -->
            <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="Transparent" />

            <!--  Fallback card brushes for layered look when system brushes are missing  -->
            <SolidColorBrush
                x:Key="CardBackgroundFillColorDefaultBrush"
                Opacity="0.7"
                Color="{ThemeResource LayerFillColorDefault}" />
            <SolidColorBrush
                x:Key="CardStrokeColorDefaultBrush"
                Opacity="0.6"
                Color="{ThemeResource CardStrokeColorDefault}" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
